@using System.Reflection
@using MauiBlazorWeb.Components.Layout
@using MauiBlazorWeb.Shared
@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.AspNetCore.Components.Routing
@namespace MauiBlazorWeb.Blazor

<Router AppAssembly="@typeof(App).Assembly"
        AdditionalAssemblies="ExtraAssemblies">
    <Found Context="routeData">
        <CascadingAuthenticationState>
            <RouteView RouteData="@routeData" DefaultLayout="typeof(MainLayout)"/>
        </CascadingAuthenticationState>
    </Found>
    <NotFound>
        <LayoutView Layout="typeof(MainLayout)">
            <p>Sorry, there's nothing at this address.</p>
        </LayoutView>
    </NotFound>
</Router>

@code {

    private static readonly Assembly[] ExtraAssemblies = new[]
    {
        typeof(_Imports).Assembly
    };

}